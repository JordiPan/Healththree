{% extends 'base.html.twig' %}
{% block nav %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand">
            <span class="fa fa-medkit text-danger"></span>
            HealthOne
        </a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarItems"
                aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarItems">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('apotheker_home') }}">Home</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('apotheker_recipe_table') }}">Recepten</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">Uitloggen</a>
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}
{% block body %}
    <div class="container">
        <h1 class="text-center"><span class="fas fa-clipboard-list"></span>Tabel recepten ({{ recepten|length }})</h1>
        <br>
        <table class="table table-bordered text-center">
            <tr>
                <th>naam</th>
                <th>datum</th>
                <th>periode</th>
                <th>verzekerd</th>
                <th>patient</th>
            </tr>
            {% for recept in recepten%}
                <tr>
                    <td>{{ recept.medicijn.naam }}</td>
                    <td>{{ recept.datum|date('d-m-Y') }}</td>
                    <td>{{ recept.periode }}</td>
                    <td>
                        {% if recept.medicijn.verzekerd %}
                            Verzekerd
                        {% else %}
                            Niet verzekerd
                        {% endif %}
                    </td>
                    <td>{{ recept.patient.firstName }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>


{% endblock %}

{% block title %}

{% endblock %}

